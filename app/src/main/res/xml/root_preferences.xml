<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Apparence">
        <ListPreference
            android:key="font_choice"
            android:title="Choix de la police"
            android:summary="Sélectionnez la police souhaitée"
            android:entries="@array/font_names"
            android:entryValues="@array/font_names"
            android:defaultValue="sans-serif" />

        <ListPreference
            android:key="font_style"
            android:title="Choix du style de la police"
            android:summary="Sélectionnez le style de la police souhaitée"
            android:entries="@array/font_styles"
            android:entryValues="@array/font_styles"
            android:defaultValue="sans-serif" />
        <ListPreference
            android:key="background_choice"
            android:title="Choix du fond"
            android:summary="Sélectionnez l'image de fond souhaitée"
            android:entries="@array/background_names"
            android:entryValues="@array/background_names"
            android:defaultValue="Default" />
    </PreferenceCategory>
</PreferenceScreen>